/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  font-size: 0.2rem;
  background: #F6F6F6 /*url(img/tm-img-10-tn.jpg)*/ no-repeat fixed top;
}
image{
  opacity: 1;
    border-radius: inherit;/*继承父元素属性*/
}
#header{
  height: 10%;
  line-height: 50rpx;
  background-color:#ED544C;
  color:white;
  text-align:center;
  padding:0.15rem;
}
.ppp{
  width: 100%;
  height: 80%;
  display: flex;
  flex-flow: row;
}
#nav{
  line-height: 50rpx;
  background-color: #333333;
  width: 12%;
  height: 100%; /*9rem*/
  float: left;
  padding: 3%;
  position: relative;
}
#section{
  background-color: #43e0b6;
  width: 64%;
  height: 100%; /*9rem*/
        /*margin-left: 100px;*/
  float: left;
  padding: 3% 0;
  position: relative;
}
#aside{
  line-height: 50rpx;
  background-color: #333333;
  width: 12%;
  height: 100%; /*9rem*/
  float: right;
  padding: 3%;
  position: relative;
}
#footer{
  height: 10%; /*9rem*/
  line-height: 100rpx;
  background-color: #0074D9;
  color: white;
  clear: both;
  text-align: center;
  padding: 5px;
  /*opacity:0.8;*/
}
.btn{
  border: 2px solid #FFFF00;
  text-align: center;
  font-family: kartika;
  color: white;
  margin: 20rpx 0;

}
.btn:hover{
  background-color: #16B5A3;
}
.info{
  width: 60rpx;
  height: 60rpx;
  top: 30rpx;
  right: 30rpx;
  position: absolute;
  background: #0074D9;
  border-radius: 50%;
  vertical-align: middle;
  border: 2px solid greenyellow;

}
#header>.span1{
  position: absolute;
    left: 0.2rem;
    top: 0.2rem;
}
#header>.span2{
  position: absolute;
    right: 0.2rem;
    top: 0.2rem;
}
/*整体设置超链接颜色*/
a:link{color: white;}
a:visited{color: red;}
