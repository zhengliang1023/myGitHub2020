/* pages/register/register.wxss */
page{
			font-family:"微软雅黑";
			font-size: 0.5rem;
			background-color:greenyellow;
		}
		.header{
			background-color:#ED544C;
			color:white;
			text-align:center;
			padding:0.15rem;
		}
		.main{
			margin: 0.5rem 10%;
			/*background-color: yellow;*/
		}
	    
	    input{
	    	width: 100%;
	    	outline-style: none;
			border: 1px solid salmon;
			border-radius: 5px;
			padding: 0.1rem 0;
		    font-size: 0.5rem;
	    }
	    textarea{
	    	width: 100%;
	    	outline-style: none;
			border: 1px solid salmon;
			border-radius: 5px;
			padding: 0.1rem 0;
		    font-size: 0.5rem;
	    }
	    button{
			background-color: #4CAF50;
			border:2px solid deeppink;
			color:white;
			text-align: center;
			font-family:kartika;
			font-size: 0.35rem;
			border-radius: 0.1rem;
			/*特效*/
			-webkit-transition-duration: 0.7s;
			transition-duration: 0.4s;
		}
		
		button:hover{
			color:#0074D9;
			background-color: #7FFF00;
		}
		.btn{
			margin: 0.5rem auto;
			text-align: center;
		}
	    
	    .qrcode{
	    	width: 10%;
	    	height: 10%;
	    }
	    
	    .span1{
			position: absolute;
		    left: 0.2rem;
		    top: 0.2rem;
		    color: white;
		    font-size: 0.1rem;
		}
		
		.span2{
			position: absolute;
		    right: 0.2rem;
		    top: 0.2rem;
		    color: white;
		    font-size: 0.1rem;
		}